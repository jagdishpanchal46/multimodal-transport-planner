<script>
function isAlpha(ch)
{
  if((ch>=65 && ch<=90) || (ch>=97 && ch<=122))
  {
    return true;
  }
  else
  {
    return false;
  }
}
function getCitySuggestions(str)
{
  alert(str);
}
$(document).ready(function(){
  $("input[class='city']").keyup(function(event) {
    if(isAlpha(event.keyCode))
    {
      getCitySuggestions($(this).val());
    }
  });
});
</script>
